<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.lottery">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PowerballClass"
            android:screenOrientation="portrait"/>
        <activity android:name=".PowerBallRulesClass"
            android:screenOrientation="portrait"/>
        <activity android:name=".PickFiveClass"
            android:screenOrientation="portrait"/>
        <activity android:name=".PickFiveRulesClass"
            android:screenOrientation="portrait"/>
        <activity android:name=".MegaMillionsClass"
            android:screenOrientation="portrait"/>
        <activity android:name=".MegaMillionsRulesClass"
            android:screenOrientation="portrait"/>

    </application>

</manifest>