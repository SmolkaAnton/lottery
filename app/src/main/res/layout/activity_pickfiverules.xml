<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#FFD700">

    <TextView
        android:id="@+id/rules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rules/How To Play:"
        android:textSize="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rules"
        android:text="1.) Enter 5 numbers between 1 and 15. If you don't pick a number between 1 and 15 you won't win!"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.) Hit the generate button to start generating numbers."
        android:layout_below="@id/line1"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/line3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3.) Hit the stop button to stop generating numbers"
        android:layout_below="@id/line2"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/line4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.) If you get every number correct, you win!"
        android:layout_below="@id/line3"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/line5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5.) Good luck! You'll need it"
        android:layout_below="@id/line4"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"/>



</RelativeLayout>