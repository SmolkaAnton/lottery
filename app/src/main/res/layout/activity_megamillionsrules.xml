<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF4500">

    <TextView
        android:id="@+id/rules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rules/How to play!"
        android:textSize="35sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.) Pick 5 numbers between 1-25. For the Mega Million number, pick a number between 1-50"
        android:layout_below="@id/rules"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.) Hit the generate button to generate numbers to play against"
        android:layout_below="@id/line1"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/howtowin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How to win!"
        android:textSize="35sp"
        android:layout_below="@id/line2"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/line3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.) Match 5 numbers + Mega Million - $1,000,000"
        android:layout_below="@id/howtowin"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/line4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.) Match 5 numbers - $500,000"
        android:layout_below="@id/line3"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/line5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3.) Match 4 numbers + Mega Millions - $10,000"
        android:layout_below="@id/line4"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/line6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.) Match 4 numbers - $500"
        android:layout_below="@id/line5"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/line8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5.) Match 3 numbers + Mega Millions- $200"
        android:layout_below="@id/line6"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/line9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6.) Match 3 numbers - $10"
        android:layout_below="@id/line8"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/line10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7.) Match 2 numbers + Mega Millions - $10"
        android:layout_below="@id/line9"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/line11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8.) Match 1 number + Mega Millions - $4"
        android:layout_below="@id/line10"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/line12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9.) Match the Mega Millions - $2"
        android:layout_below="@id/line11"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"/>


</RelativeLayout>