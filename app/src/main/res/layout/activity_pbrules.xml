<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#228B22">

    <TextView
        android:textColor="#000000"
        android:id="@+id/rules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rules:"
        android:textSize="25sp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:textColor="#000000"
        android:id="@+id/line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Press the Generate button to generate numbers between 1 and 30. Make sure to input a number between 1 and 30 or you will probably lose"
        android:textSize="15dp"
        android:layout_below="@id/rules"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:textColor="#000000"
        android:id="@+id/win"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/line1"
        android:text="Ways to Win:"
        android:textSize="25sp" />

    <TextView
        android:textColor="#000000"
        android:id="@+id/step1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/win"
        android:text="1.) Get every number correct + the powerball - $1000"
        android:textSize="15sp" />

    <TextView
        android:textColor="#000000"
        android:id="@+id/step2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/step1"
        android:layout_marginTop="15dp"
        android:text="2.) Get every number correct, except the powerball - $500" />

    <TextView
        android:textColor="#000000"
        android:id="@+id/step3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/step2"
        android:layout_marginTop="15dp"
        android:text="3.) Get only the powerball right - $100" />

    <TextView
        android:textColor="#000000"
        android:id="@+id/step4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.) Get one number right + the powerball - $50"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/step3"
        android:layout_marginTop="15dp"/>

    <TextView
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5.) Get one number correct - $5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/step4"
        android:layout_marginTop="15dp"/>

</RelativeLayout>